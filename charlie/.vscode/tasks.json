{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Charlie | lnd | start lnd",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/start-lnd.sh"
      ],
    },
    {
      "label": "Charlie | lncli | run command",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "${input:lncli_command}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | create wallet",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/lncli/create-wallet.sh"
      ],
    },
    {
      "label": "Charlie | lncli | new addrees | np2wkh",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/lncli/new-address-np2wkh.sh"
      ],
    },
    {
      "label": "Charlie | lncli | new addrees | p2wkh",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/lncli/new-address-p2wkh.sh"
      ],
    },
    {
      "label": "Charlie | lncli | connect to Bob",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/lncli/connect-to-bob.sh"
      ],
    },
    {
      "label": "Charlie | lncli | open channel to Bob",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/lncli/open-channel-to-bob.sh"
      ],
    },
    {
      "label": "Charlie | lncli | add invoice",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/lncli/add-invoice.sh"
      ],
    }
  ],
  "inputs": [
    {
      "id": "lncli_command",
      "description": "⚡️ Select a command",
      "default": "getinfo",
      "type": "pickString",
      "options": [
        "walletballance",
        "listpeers",
        "listchannels",
        "pendingchannels",
        "getnetworkinfo",
        "describegraph",
        "unlock",
        "getinfo"
      ]
    }
  ]
}
