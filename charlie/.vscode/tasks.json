{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Charlie | lnd | start lnd",
      "type": "shell",
      "command": "zsh",
      "args": [
        "${workspaceFolder}/bin/start-lnd.sh"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | run command",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "${input:lncli_command}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | create wallet",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "create"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | new wallet addrees",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "newaddress",
        "${input:wallet_address_type}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | connect to lnd peer node",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "connect",
        "${input:node_public_key}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | disconnect from lnd peer node",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "disconnect",
        "${input:node_public_key}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | open payment channel",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "openchannel",
        "--node_key=${input:node_public_key}",
        "--local_amt=${input:satoshis}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Charlie | lncli | close payment channel",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "closechannel",
        "--funding_txid=${input:funding_txid}",
        "--output_index=${input:output_index}"
      ],
      "problemMatcher": []
    },
    {
      // Queries the channel router for a potential path to the destination that
      // has sufficient flow for the amount including fees
      "label": "Charlie | lncli | query routes to node",
      "type": "shell",
      "command": "lncli",
      "args": [
        "--rpcserver=localhost:10003",
        "--macaroonpath=data/chain/bitcoin/testnet/admin.macaroon",
        "queryroutes",
        "--dest=${input:node_public_key}",
        "--amt=${input:satoshis}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "lncli_command",
      "description": "⚡️ Select a command",
      "default": "getinfo",
      "type": "pickString",
      "options": [
        "walletbalance",
        "listpeers",
        "listchannels",
        "listinvoices",
        "pendingchannels",
        "getnetworkinfo",
        "describegraph",
        "unlock",
        "getinfo"
      ]
    },
    {
      "id": "wallet_address_type",
      "description": "⚡️ Select a wallet address type",
      "default": "np2wkh",
      "type": "pickString",
      "options": [
        "p2wkh",
        "np2wkh"
      ]
    },
    {
      "id": "node_public_key",
      "description": "⚡️ Enter a node public key (you may also need a \"@{hostname}:{port}\")",
      "type": "promptString"
    },
    {
      "id": "satoshis",
      "description": "⚡️ Enter a number of satoshis",
      "type": "promptString",
      "default": "100000"
    },
    {
      "id": "satoshis",
      "description": "⚡️ Enter a number of satoshis",
      "type": "promptString",
      "default": "100000"
    },
    {
      "id": "funding_txid",
      "description": "⚡️ Enter a funding transaction id. This is the first part of the colon-separated `channel_point` value that's listed for each channel when we run `lncli listchannels`",
      "type": "promptString"
    },
    {
      "id": "output_index",
      "description": "⚡️ Enter a channel_point output index. This is the last part of the colon-separated `channel_point` value that's listed for each channel when we run `lncli listchannels`",
      "type": "promptString"
    },

  ]
}
