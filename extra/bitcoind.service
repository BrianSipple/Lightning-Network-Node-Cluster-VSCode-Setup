[Unit]
Description=Bitcoin daemon
After=network.target

# for use with sendmail alert
#OnFailure=systemd-sendmail@%n

[Service]
User=briansipple
Group=briansipple

Type=forking
PIDFile=/home/briansipple/.bitcoin/bitcoind.pid

ExecStart=/usr/local/bin/bitcoind -conf=/home/briansipple/.bitcoin/bitcoin.conf -pid=/home/briansipple/.bitcoin/bitcoind.pid
ExecStop=/usr/local/bin/bitcoin-cli stop

KillMode=process
Restart=on-failure
TimeoutSec=120
RestartSec=30

[Install]
WantedBy=multi-user.target
